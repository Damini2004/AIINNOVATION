rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow admin writes to a temporary folder
    match /temp/{allPaths=**} {
      allow write: if request.auth != null; // Add more specific admin checks if needed
    }

    // Allow admin writes to the permanent educational_resources folder
    match /educational_resources/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
